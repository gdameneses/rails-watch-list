<div class="container">
  <h2><%= @list.name %></h2>
  <div class="row" style="margin: 5px; justify-content: space-between;">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 20rem">
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.comment %></p>
      <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger"%>
    </div>
  <% end %>
  </div>
  <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-success'%>
</div>
